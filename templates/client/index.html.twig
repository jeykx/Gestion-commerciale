{% extends 'base.html.twig' %}

{% block title %}Client index{% endblock %}

{% block body %}

<div class="panel panel-default container">
  <div class="panel-heading mt-4"><h1>Liste des clients</h1></div>
  <div class="panel-body mt-5"></div>

    <table class="table table-condensed">
        <thead>
            <tr>
                <th>Id</th>
                <th>Designation</th>
                <th>RespComm</th>
                <th>Respfinance</th>
                <th>Addlivr</th>
                <th>Addfacture</th>
                <th>Tel</th>
                <th>Portable</th>
                <th>Fax</th>
                <th>Email</th>
                <th>Soldeinit</th>
                <th>Solde</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for client in clients %}
            <tr>
                <td>{{ client.id }}</td>
                <td>{{ client.designation }}</td>
                <td>{{ client.RespComm }}</td>
                <td>{{ client.Respfinance }}</td>
                <td>{{ client.addlivr }}</td>
                <td>{{ client.addfacture }}</td>
                <td>{{ client.tel }}</td>
                <td>{{ client.portable }}</td>
                <td>{{ client.fax }}</td>
                <td>{{ client.email }}</td>
                <td>{{ client.soldeinit }}</td>
                <td>{{ client.solde }}</td>
                <td>
                    <a href="{{ path('client_show', {'id': client.id}) }}" class="btn btn-success">show</a>
                </td>
                <td>
                    <a href="{{ path('client_edit', {'id': client.id}) }}" class="btn btn-warning">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('client_new') }}" class="btn btn-warning">Creer un nouveau client</a>
    </div>
{% endblock %}
