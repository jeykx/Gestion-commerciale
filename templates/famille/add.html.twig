{% extends 'base.html.twig' %}

{% block body %}

<div class="container">

<h1 class="mt-3 mb-4"> Gestion des familles</h1>

{{ form_start(f) }}
{{ form_widget(f) }}
{{ form_end(f) }}

<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Libelle</th>
    </tr>
  </thead>
  {% for fam in fams %}
  
    <tr>
      <td>{{ fam.id  }}</td>
      <td>{{ fam.libelle  }}</td>
      <td><a href="{{ path('del_famille', {'id': fam.id }) }}" class=" btn btn-danger">Supprimer</a></td>
    </tr>
{% endfor %}

</table>


</div>

{% endblock %}
